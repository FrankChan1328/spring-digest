<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="personPostProcessor" class="demo.ctx.cfg.PersonPostProcessor" />
	<bean id="personFactoryPostProcessor" class="demo.ctx.cfg.PersonFactoryPostProcessor" />
	<bean id="person" class="demo.ctx.bean.Person" init-method="init">
		<property name="name" value="hresh" />
		<property name="age" value="18" />
	</bean>

</beans>